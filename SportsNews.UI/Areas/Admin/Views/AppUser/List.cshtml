
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

@model List<SportsNews.Entities.AppUser>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h4>List of Users</h4>
                </div>
                <div class="box-body">
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>User Name</th>
                                <th>Mail Address</th>
                                <th>Password</th>
                                <th>Image</th>
                                <th>Role</th>
                                <th>Create Date</th>
                                <th>Update Date</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Mail</td>
                                    <td>@item.Password</td>
                                    <td><img src="@item.XSmallUserImage" /></td>
                                    <td>@item.Role</td>
                                    <td>@item.CreateDate</td>
                                    <td>@item.UpdateDate</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a href="/Admin/AppUser/Update/@item.Id" class="btn btn-warning">Update</a>
                                        <a href="/Admin/AppUser/Delete/@item.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    <a href="/Admin/AppUser/Create" class="btn btn-block btn-primary">Create The New One</a>
                </div>
            </div>
        </div>
    </div>
</section>

